<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="wtfisandroid.drinkinggamescollection">

    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.MainMenu"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.games.maexchen.Maexchen"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:label="@string/title_activity_maexchen_menu"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".activities.games.maexchen.MaexchenRules"
            android:label="@string/title_activity_maexchen_rules"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".activities.games.polnisches_game.PolnischesTrinkspiel"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:label="@string/title_activity_polnisches_trinkspiel"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".activities.games.settings.SettingsActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".activities.ManualActivity"
            android:label="@string/title_activity_manual"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".activities.games.IHaveNeverEverActivity"
            android:screenOrientation="sensorPortrait"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".activities.games.pyramid.PyramidActivity"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".activities.games.pyramid.PyramidFinalRound"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".activities.games.pyramid.PyramidSecondRound"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/FullscreenTheme"/>
        <activity
            android:name=".activities.games.polnisches_game.PolnischesTrinkspielRules"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:label="@string/title_activity_polnisches_trinkspiel_rules"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".activities.games.polnisches_game.PolnischGame"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:label="@string/title_activity_polnisch_game"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".activities.games.settings.AddStatementActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".activities.games.settings.DeleteStatementActivity"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>