<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="wtfisandroid.drinkinggamescollection">

    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainMenu"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".Maexchen"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:label="@string/title_activity_maexchen_menu"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".MaexchenRules"
            android:label="@string/title_activity_maexchen_rules"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".PolnischesTrinkspiel"
            android:label="@string/title_activity_polnisches_trinkspiel"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".gui.SettingsActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".gui.ManualActivity"
            android:label="@string/title_activity_manual"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".gui.game.IHaveNeverEverActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".gui.game.pyramid.PyramidActivity"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".gui.game.pyramid.PyramidFinalRound"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".gui.game.pyramid.PyramidSecondRound"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/FullscreenTheme"/>
    </application>

</manifest>