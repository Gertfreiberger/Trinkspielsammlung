<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="wtfisandroid.drinkinggamescollection">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainMenu"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Maexchen"
            android:label="@string/title_activity_maexchen_menu"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"
            android:configChanges="keyboard|keyboardHidden|orientation"/>
        <activity
            android:name=".Kingscup"
            android:label="@string/title_activity_kingscup_menu"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PolnischesTrinkspiel"
            android:label="@string/title_activity_polnisches_trinkspiel"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Pyramid"
            android:label="@string/title_activity_pyramid"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity
            android:name=".MaexchenRules"
            android:label="@string/title_activity_maexchen_rules"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>