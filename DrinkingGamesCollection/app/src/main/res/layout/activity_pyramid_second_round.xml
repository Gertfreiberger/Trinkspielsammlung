<?xml version="1.0" encoding="utf-8"?>

<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".gui.game.pyramid.PyramidSecondRoundActivity"
    android:background="@drawable/ic_background_manual_3"
    android:rowCount="6"
    android:columnCount="5"
    android:orientation="vertical"
    android:textAlignment="center"
    android:alignmentMode="alignMargins">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivPyramide01"
        android:layout_row="4"
        android:layout_column="0"
        android:background="@drawable/gamecard_2_of_clubs"
        android:visibility="visible"
        android:adjustViewBounds="false"
        android:layout_margin="5dp"
        android:transitionName="r" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivPyramide02"
        android:layout_row="4"
        android:layout_column="1"
        android:background="@drawable/gamecard_2_of_clubs"
        android:layout_margin="5dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivPyramide03"
        android:layout_row="4"
        android:layout_column="2"
        android:background="@drawable/gamecard_2_of_clubs"
        android:layout_margin="5dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivPyramide04"
        android:layout_row="4"
        android:layout_column="3"
        android:background="@drawable/gamecard_2_of_clubs"
        android:layout_margin="5dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivPyramide05"
        android:layout_row="4"
        android:layout_column="4"
        android:background="@drawable/gamecard_2_of_clubs"
        android:layout_margin="5dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivPyramide06"
        android:layout_row="3"
        android:layout_column="1"
        android:background="@drawable/gamecard_2_of_clubs"
        android:layout_marginLeft="-30dp"
        android:layout_margin="5dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivPyramide07"
        android:layout_row="3"
        android:layout_column="2"
        android:background="@drawable/gamecard_2_of_clubs"
        android:layout_marginLeft="-30dp"
        android:layout_margin="5dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivPyramide08"
        android:layout_row="3"
        android:layout_column="3"
        android:background="@drawable/gamecard_2_of_clubs"
        android:layout_marginLeft="-30dp"
        android:layout_margin="5dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivPyramide09"
        android:layout_row="3"
        android:layout_column="4"
        android:background="@drawable/gamecard_2_of_clubs"
        android:layout_marginLeft="-30dp"
        android:layout_margin="5dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivPyramide10"
        android:layout_row="2"
        android:layout_column="1"
        android:background="@drawable/gamecard_2_of_clubs"
        android:layout_margin="5dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivPyramide11"
        android:layout_row="2"
        android:layout_column="2"
        android:background="@drawable/gamecard_2_of_clubs"
        android:layout_margin="5dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivPyramide12"
        android:layout_row="2"
        android:layout_column="3"
        android:background="@drawable/gamecard_2_of_clubs"
        android:layout_margin="5dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivPyramide13"
        android:layout_row="1"
        android:layout_column="2"
        android:background="@drawable/gamecard_2_of_clubs"
        android:layout_marginLeft="-35dp"
        android:layout_margin="5dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivPyramide14"
        android:layout_row="1"
        android:layout_column="3"
        android:background="@drawable/gamecard_2_of_clubs"
        android:layout_marginLeft="-35dp"
        android:layout_margin="5dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivPyramide15"
        android:layout_row="0"
        android:layout_column="2"
        android:background="@drawable/gamecard_2_of_clubs"
        android:layout_margin="5dp" />
</GridLayout>
