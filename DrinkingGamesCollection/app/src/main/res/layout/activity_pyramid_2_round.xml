<?xml version="1.0" encoding="utf-8"?>

<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/PyramidLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background_manual_3"
    android:rowCount="6"
    android:columnCount="20"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivPyramide1"
        android:layout_row="4"
        android:layout_column="0"
        android:background="@drawable/card_back"
        android:visibility="visible"
        android:adjustViewBounds="false"
        android:layout_margin="5dp"
        android:transitionName="r" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivPyramide2"
        android:layout_row="4"
        android:layout_column="1"
        android:background="@drawable/card_back"
        android:layout_margin="5dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivPyramide3"
        android:layout_row="4"
        android:layout_column="2"
        android:background="@drawable/card_back"
        android:layout_margin="5dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivPyramide4"
        android:layout_row="4"
        android:layout_column="3"
        android:background="@drawable/card_back"
        android:layout_margin="5dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivPyramide5"
        android:layout_row="4"
        android:layout_column="4"
        android:background="@drawable/card_back"
        android:layout_margin="5dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivPyramide6"
        android:layout_row="3"
        android:layout_column="1"
        android:background="@drawable/card_back"
        android:layout_margin="5dp"
        android:layout_marginLeft="-20dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivPyramide7"
        android:layout_row="3"
        android:layout_column="2"
        android:background="@drawable/card_back"
        android:layout_margin="5dp"
        android:layout_marginLeft="-20dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivPyramide8"
        android:layout_row="3"
        android:layout_column="3"
        android:background="@drawable/card_back"
        android:layout_margin="5dp"
        android:layout_marginLeft="-20dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivPyramide9"
        android:layout_row="3"
        android:layout_column="4"
        android:background="@drawable/card_back"
        android:layout_margin="5dp"
        android:layout_marginLeft="-20dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivPyramide10"
        android:layout_row="2"
        android:layout_column="1"
        android:background="@drawable/card_back"
        android:layout_margin="5dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivPyramide11"
        android:layout_row="2"
        android:layout_column="2"
        android:background="@drawable/card_back"
        android:layout_margin="5dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivPyramide12"
        android:layout_row="2"
        android:layout_column="3"
        android:background="@drawable/card_back"
        android:layout_margin="5dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivPyramide13"
        android:layout_row="1"
        android:layout_column="2"
        android:background="@drawable/card_back"
        android:layout_marginLeft="-20dp"
        android:layout_margin="5dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivPyramide14"
        android:layout_row="1"
        android:layout_column="3"
        android:background="@drawable/card_back"
        android:layout_marginLeft="-20dp"
        android:layout_margin="5dp"
        android:longClickable="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivPyramide15"
        android:layout_row="0"
        android:layout_column="2"
        android:background="@drawable/card_back"
        android:layout_margin="5dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/PlayerCard1"
        android:background="@drawable/card_back"
        android:layout_row="1"
        android:layout_column="16"
        android:layout_margin="5dp"
        android:layout_marginLeft="80dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/PlayerCard2"
        android:background="@drawable/card_back"
        android:layout_row="1"
        android:layout_column="17"
        android:layout_margin="5dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/PlayerCard3"
        android:background="@drawable/card_back"
        android:layout_row="1"
        android:layout_column="18"
        android:layout_margin="5dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/PlayerCard4"
        android:background="@drawable/card_back"
        android:layout_row="1"
        android:layout_column="19"
        android:layout_margin="5dp"
        android:layout_marginRight="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/PlayerHand"
        android:layout_row="2"
        android:layout_column="16"
        android:layout_columnSpan="4"
        android:text="@string/playerhand"
        android:layout_marginLeft="80dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Austeilen"
        android:id="@+id/bDeal"
        android:layout_row="3"
        android:layout_column="16"
        android:layout_margin="5dp"
        android:layout_gravity="fill_horizontal|center_horizontal"
        android:layout_columnSpan="4"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="80dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verzichten"
        android:id="@+id/bNext"
        android:layout_row="4"
        android:layout_column="16"
        android:layout_margin="5dp"
        android:layout_columnSpan="4"
        android:layout_gravity="fill_horizontal|center_horizontal"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="80dp" />
</GridLayout>