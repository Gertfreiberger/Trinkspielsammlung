<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activities.games.pyramid.PyramidFinalRound"
    android:background="@drawable/ic_background_manual"
    android:clickable="false">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/final_round"
        android:id="@+id/textView4"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/final_player_name"
        android:id="@+id/tvFinalPlayer"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivPyramideFinalRoundCard1"
        android:src="@drawable/gamecard_2_of_clubs"
        android:layout_alignTop="@+id/ivPyramideFinalRoundCard3"
        android:layout_toLeftOf="@+id/textView4"
        android:layout_toStartOf="@+id/textView4"
        android:layout_marginRight="85dp"
        android:layout_marginEnd="85dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivPyramideFinalRoundCard2"
        android:src="@drawable/gamecard_3_of_diamonds"
        android:layout_alignTop="@+id/ivPyramideFinalRoundCard1"
        android:layout_toLeftOf="@+id/textView4"
        android:layout_toStartOf="@+id/textView4"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivPyramideFinalRoundCard3"
        android:src="@drawable/gamecard_4_of_hearts"
        android:layout_alignTop="@+id/ivPyramideFinalRoundCard4"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivPyramideFinalRoundCard4"
        android:src="@drawable/gamecard_5_of_clubs"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/ibPyramidFinalLowerButton"
        android:layout_alignStart="@+id/ibPyramidFinalLowerButton"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivPyramideFinalRoundCard5"
        android:src="@drawable/gamecard_ace_of_hearts"
        android:layout_marginLeft="39dp"
        android:layout_marginStart="39dp"
        android:layout_alignTop="@+id/ivPyramideFinalRoundCard4"
        android:layout_toRightOf="@+id/ivPyramideFinalRoundCard4"
        android:layout_toEndOf="@+id/ivPyramideFinalRoundCard4"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ibPyramidFinalHigherButton"
        android:src="@drawable/ic_higher"
        android:background="@null"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/ivPyramideFinalRoundCard2"
        android:layout_alignStart="@+id/ivPyramideFinalRoundCard2"
        android:onClick="onClickHigher"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ibPyramidFinalLowerButton"
        android:background="@null"
        android:src="@drawable/ic_lower"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/textView4"
        android:layout_toEndOf="@+id/textView4"
        android:onClick="onClickLower"/>
</RelativeLayout>
