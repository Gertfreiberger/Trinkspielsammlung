<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="wtfisandroid.drinkinggamescollection.MainMenu"
    tools:showIn="@layout/activity_main_menu">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mainmenu_headline"
        android:id="@+id/headline"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="14pt"
        android:textColor="#090909"
        android:gravity="center_horizontal" />

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/headline"
        android:gravity="center_horizontal">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <Button
                android:layout_width="@dimen/mainmenu_button_width"
                android:layout_height="@dimen/mainmenu_button_height"
                android:text="@string/mainmenu_button_maexchen"
                android:id="@+id/button_maexchen"
                android:background="#da4c4c"
                android:onClick="onClick"
                android:layout_margin="@dimen/mainmenu_button_margin"/>

            <Button
                android:layout_width="@dimen/mainmenu_button_width"
                android:layout_height="match_parent"
                android:text="@string/mainmenu_button_polnisches"
                android:id="@+id/button_polnisches_trinkspiel"
                android:background="#da4c4c"
                android:onClick="onClick"
                android:layout_margin="@dimen/mainmenu_button_margin"/>
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <Button
                android:layout_width="@dimen/mainmenu_button_width"
                android:layout_height="@dimen/mainmenu_button_height"
                android:text="@string/pyramid"
                android:id="@+id/button_pyramid"
                android:background="#da4c4c"
                android:onClick="onClick"
                android:layout_margin="@dimen/mainmenu_button_margin"/>

            <Button
                android:layout_width="@dimen/mainmenu_button_width"
                android:layout_height="match_parent"
                android:text="@string/i_have_never_ever"
                android:id="@+id/button_i_have_never_ever"
                android:background="#da4c4c"
                android:onClick="onClick"
                android:layout_margin="@dimen/mainmenu_button_margin"/>

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp">

            <Button
                android:layout_width="@dimen/mainmenu_button_width"
                android:layout_height="@dimen/mainmenu_button_height"
                android:text="@string/settings"
                android:id="@+id/button_settings"
                android:background="#da4c4c"
                android:onClick="onClick"
                android:layout_margin="@dimen/mainmenu_button_margin"/>

            <Button
                android:layout_width="@dimen/mainmenu_button_width"
                android:layout_height="@dimen/mainmenu_button_height"
                android:text="@string/manual"
                android:id="@+id/button_manual"
                android:background="#da4c4c"
                android:onClick="onClick"
                android:layout_margin="@dimen/mainmenu_button_margin" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <Button
                android:layout_width="@dimen/mainmenu_button_width"
                android:layout_height="@dimen/mainmenu_button_height"
                android:text="@string/close"
                android:id="@+id/button_close"
                android:background="#da4c4c"
                android:onClick="onClick"
                android:layout_margin="@dimen/mainmenu_button_margin"/>
        </TableRow>
    </TableLayout>


</RelativeLayout>
