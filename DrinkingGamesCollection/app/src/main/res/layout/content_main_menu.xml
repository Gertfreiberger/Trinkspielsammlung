<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="wtfisandroid.drinkinggamescollection.MainMenu"
    tools:showIn="@layout/activity_main_menu">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mainmenu_headline"
        android:id="@+id/headline"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="14pt"
        android:textColor="#090909" />

    <Button
        android:layout_width="@dimen/mainmenu_button_width"
        android:layout_height="@dimen/mainmenu_button_height"
        android:text="@string/mainmenu_button_maexchen"
        android:id="@+id/button_maexchen"
        android:background="#da4c4c"
        android:onClick="onClick"
        android:layout_alignTop="@+id/button_kingscup"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="@dimen/mainmenu_button_width"
        android:layout_height="@dimen/mainmenu_button_height"
        android:text="@string/mainmenu_button_kingscup"
        android:id="@+id/button_kingscup"
        android:background="#da4c4c"
        android:onClick="onClick"
        android:visibility="invisible"
        android:layout_below="@+id/button_pyramid"
        android:layout_toStartOf="@+id/button_i_have_never_ever"
        android:layout_marginTop="34dp"
        />

    <Button
        android:layout_width="@dimen/mainmenu_button_width"
        android:layout_height="@dimen/mainmenu_button_height"
        android:text="@string/pyramid"
        android:id="@+id/button_pyramid"
        android:background="#da4c4c"
        android:onClick="onClick"
        android:layout_below="@+id/headline"
        android:layout_alignParentStart="true"
        android:translationZ="25dp"/>

    <Button
        android:layout_width="@dimen/mainmenu_button_width"
        android:layout_height="@dimen/mainmenu_button_height"
        android:text="@string/i_never_ever"
        android:id="@+id/button_i_have_never_ever"
        android:background="#da4c4c"
        android:onClick="onClick"
        android:layout_alignTop="@+id/button_pyramid"
        android:layout_alignParentEnd="true"
        android:translationZ="25dp"/>

    <Button
        android:layout_width="@dimen/mainmenu_button_width"
        android:layout_height="@dimen/mainmenu_button_height"
        android:text="@string/settings"
        android:id="@+id/button_settings"
        android:background="#da4c4c"
        android:onClick="onClick"
        android:layout_alignTop="@+id/button_manual"
        android:layout_toEndOf="@+id/button_kingscup"
        android:translationZ="25dp"/>

    <Button
        android:layout_width="@dimen/mainmenu_button_width"
        android:layout_height="@dimen/mainmenu_button_height"
        android:text="@string/manual"
        android:id="@+id/button_manual"
        android:background="#da4c4c"
        android:layout_marginBottom="25dp"
        android:layout_above="@+id/button_close"
        android:layout_alignParentStart="true"
        android:onClick="onClick"
        android:translationZ="25dp"/>

    <Button
        android:layout_width="@dimen/mainmenu_button_width"
        android:layout_height="@dimen/mainmenu_button_height"
        android:text="@string/close"
        android:id="@+id/button_close"
        android:background="#da4c4c"
        android:layout_marginBottom="46dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="onClick"
        android:transitionName="25"
        android:translationZ="25dp"/>

</RelativeLayout>
